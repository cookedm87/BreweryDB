@model breweries.Models.Country

@{
    ViewBag.Title = "Details";
}
<div class="editHead">
    <h4 class="edit-name">Details - @Html.DisplayFor(model => model.Region)</h4>
</div>
<div class="beer-det-brew">
    <a href="http://@Html.Raw(Model.RegionBrewWiki)" target="_blank" class="website det-name det-website">  @Html.DisplayFor(model => model.RegionBrewWiki)</a>
</div>
<div>
    <hr />
    <table class="table">
        <tr>
            <th>
                Style
            </th>
            <th>
                Colour
            </th>
            <th>
                Low ABV range
            </th>
            <th>
                High ABV range
            </th>
            <th>
                Style guide
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Styles)
        {
        <tr>
            <td class="det-name">
                @Html.ActionLink(item.Style1, "Details", "Styles", new { id = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lowABV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.highABV)
            </td>
            <td>
                <a href="http://@Html.Raw(item.styleWiki)" target="_blank" class="website">@Html.DisplayFor(modelItem => item.styleWiki)</a>
            </td>
            <td class="table-links">
                @Html.ActionLink(" ", "../Styles/Edit", new { id = item.Id }, new { @class = "table-links fa fa-edit" })
                @Html.ActionLink(" ", "../Styles/Details", new { id = item.Id }, new { @class = "table-links fa fa-info" })
                @Html.ActionLink(" ", "../Styles/Delete", new { id = item.Id }, new { @class = "table-links fa fa-trash" })
            </td>
        </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
